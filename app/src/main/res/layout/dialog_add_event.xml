<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_text_style"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDialogMain">

        <EditText
            android:id="@+id/et_nameEvent"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:hint="@string/hintNameEvent" />

        <TextView
            android:id="@+id/tv_descriptionEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_nameEvent"
            android:layout_margin="20dp"
            android:text="@string/description_event"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_descriptionEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_descriptionEvent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/tv_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating Bar"
            android:layout_below="@id/et_descriptionEvent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numbers"
            android:layout_below="@id/tv_ratingBar"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="19dp"/>

        <RadioGroup
            android:id="@+id/rg_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_descriptionEvent">

            <RadioButton
                android:id="@+id/rb_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp" />

            <RadioButton
                android:id="@+id/rb_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/iv_stars1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_descriptionEvent"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_tmp" />

        <ImageView
            android:id="@+id/iv_stars2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_descriptionEvent"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_tmp" />

        <ImageView
            android:id="@+id/iv_stars3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_descriptionEvent"
            android:layout_marginLeft="130dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_tmp" />

        <ImageView
            android:id="@+id/iv_stars4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_descriptionEvent"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_tmp" />

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_stars1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_one" />

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_stars1"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_two" />

        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_stars1"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_three" />

        <ImageView
            android:id="@+id/iv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_stars1"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rg_main"
            android:src="@drawable/ic_four" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tl_basement"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_main"
        android:orientation="horizontal"
        android:background="@color/colorDialogBasement">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorDialogAddLayout">
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>